<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Brushes-->
    <SolidColorBrush x:Key="Foreground" Color="Black"/>
    <SolidColorBrush x:Key="ApplicationBackground" Color="#BFEBEBEB"/>
    <SolidColorBrush x:Key="ViewBackground" Color="White"/>
    <SolidColorBrush x:Key="EmptyContentBackground" Color="LightGray"/>
    <SolidColorBrush x:Key="AccentBackground" Color="DodgerBlue"/>

    <!--Images-->
    <BitmapImage x:Key="ApplicationLogo" UriSource="pack://application:,,,/Swift;component/Images/Logo_lightning_light.png"/>
    <BitmapImage x:Key="ApplicationLogoSmall" UriSource="pack://application:,,,/Swift;component/Images/Logo_lightning_light.png"/>
    <BitmapImage x:Key="IM_settings" UriSource="pack://application:,,,/Swift;component/Images/im_settings.png"/>

    <!--Styles-->
    <Style x:Key="TitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="SegoeUILight"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="{DynamicResource AccentBackground}"/>
    </Style>
</ResourceDictionary>